<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Agregar Producto</title>
  <link rel="stylesheet" href="/api/public/css/index.css">
</head>
<body class="add-body">
  <div class="add-main-wrapper">
    <div class="add-form-container">
      <section id="addProductSection" class="visible">
        <form id="formAddProduct" class="add-form" enctype="multipart/form-data">
          <div class="add-form-group">
            <label for="name" class="add-label">Nombre del producto</label>
            <input class="add-form-text-input" type="text" name="name" id="name" required />
          </div>
          <div class="add-form-group">
            <label for="category" class="add-label">Categoría</label>
            <select class="add-form-dropdown" name="category" id="category" required>
              <option value="" disabled selected>Seleccionar una categoría</option>
              <option value="fruits">Frutas</option>
              <option value="vegetables">Verduras</option>
              <option value="dairy">Lácteos</option>
              <option value="meat">Carnes</option>
              <option value="beverages">Bebidas</option>
              <option value="Almacen">Almacen</option>
            </select>
          </div>
          <div class="add-form-group">
            <label for="brand" class="add-label">Marca</label>
            <select class="add-form-dropdown" name="brand" id="brand" required>
              <option value="" disabled selected>Seleccionar una marca</option>
              <option value="arcor">Arcor</option>
              <option value="lada">Lada</option>
              <option value="cerveceria">Cervecería Quilmes</option>
              <option value="la-anonima">La Anónima</option>
              <option value="Branca">Branca</option>
              <option value="luchetti">Luchetti</option>
            </select>
          </div>
          <div class="add-form-group">
            <label for="price" class="add-label">Precio</label>
            <input class="add-form-text-input" type="number" step="0.01" name="price" placeholder="0.00" id="price" required />
          </div>
          <div class="add-form-group">
            <label for="description" class="add-label">Descripción</label>
            <textarea class="add-form-text-input" name="description" id="description" placeholder="Escribe una descripción" required></textarea>
          </div>
          <div class="add-form-group">
            <label for="stock" class="add-label">Stock</label>
            <input class="add-form-text-input" type="number" name="stock" id="stock" placeholder="0" required />
          </div>
          <div class="add-form-group">
            <label for="thumbnail" class="add-label">Imagen</label>
            <input class="add-form-file-input" type="file" name="thumbnail" id="thumbnail" required />
          </div>
          <input class="add-form-btn" type="submit" value="Agregar producto" />
        </form>
        <div class="navigation">
          <a href="/cart" class="nav-link">Ver Carrito</a>
        </div>
      </section>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="/api/public/js/formshandle.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const form = document.getElementById("formAddProduct");
      if (form) {
        form.onsubmit = (event) => {
          event.preventDefault();
          const formData = new FormData(event.target);
          const productData = Object.fromEntries(formData.entries());

          fetch("/api/products", {
            method: "POST",
            headers: {
              "Content-Type": "application/json"
            },
            body: JSON.stringify(productData)
          })
          .then(response => response.json())
          .then(data => {
            socket.emit("product-added", data.payload);
          })
          .catch(error => console.error("Error al agregar producto:", error));
        };
      } else {
        console.error("Formulario no encontrado");
      }
    });
  </script>
</body>
</html>
