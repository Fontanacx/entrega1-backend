<div class="main-wrapper">
  <div class="form-container">
    <section id="addProductSection" class="visible">
      <form id="formAddProduct" enctype="multipart/form-data">
        <div>
          <label for="name">Nombre del producto</label>
          <input class="form_text-input" type="text" name="name" id="name" />
        </div>
        <div>
          <label for="category">Categoría</label>
          <select class="form_dropdown" name="category" id="category">
            <option value="" disabled selected>Seleccionar una categoría</option>
            <option value="fruits">Frutas</option>
            <option value="vegetables">Verduras</option>
            <option value="dairy">Lácteos</option>
            <option value="meat">Carnes</option>
            <option value="beverages">Bebidas</option>
          </select>
        </div>

        <div>
          <label for="brand">Marca</label>
          <select class="form_dropdown" name="brand" id="brand">
            <option value="" disabled selected>Seleccionar una marca</option>
            <option value="arcor">Arcor</option>
            <option value="lada">Lada</option>
            <option value="cerveceria">Cervecería Quilmes</option>
            <option value="la-anonima">La Anónima</option>
          </select>
        </div>

        <div>
          <label for="price">Precio</label>
          <input class="form_text-input" type="text" name="price" placeholder="0.00" id="price" />
        </div>

        <div>
          <label for="description">Descripción</label>
          <textarea class="form_text-input" name="description" id="description" placeholder="Escribe una descripción"></textarea>
        </div>
        <div>
          <label for="stock">Stock</label>
          <input class="form_text-input" type="number" name="stock" id="stock" placeholder="0" />
        </div>

        <div class="form_file">
          <label for="thumbnail">Imagen</label>
          <input type="file" name="thumbnail" id="thumbnail" />
        </div>

        <input class="form-btn" type="submit" value="Agregar producto" />
      </form>
    </section>
  </div>
</div>

<script src="/api/public/js/formshandle.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/api/public/js/products.socket.js"></script>